{
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",   // uncomment if you put TS files in /src
    "outDir": "./dist",     // compiled JS will go here

    // Environment Settings
    "module": "nodenext",
    "target": "esnext",
    "lib": ["es2015", "esnext", "dom"],   // ensures Promise, async/await, and DOM APIs
    "types": [],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["*.ts"]   // adjust if files live in /src
}
